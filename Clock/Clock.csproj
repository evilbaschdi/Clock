<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net472</TargetFramework>
    <TieredCompilation>true</TieredCompilation>
    <UseWPF>true</UseWPF>
    <Version>2019.3.13.746</Version>
    <Authors>Sebastian Walter</Authors>
    <Copyright>Copyright © 2018 - 2019 evilbaschdi</Copyright>
    <Company>evilbaschdi</Company>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <RuntimeIdentifiers>win</RuntimeIdentifiers>
    <ApplicationIcon>clock.ico</ApplicationIcon>
    <PackageIconUrl>clock.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/evilbaschdi/Clock</RepositoryUrl>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\Clock.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="clock.ico" />
    <None Remove="clock.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="EvilBaschdi.Core" Version="2018.416.22.11" />
    <PackageReference Include="FluentWPF" Version="0.6.1" />
    <PackageReference Include="DeltaCompressionDotNet" Version="1.1.0" />
    <PackageReference Include="Mono.Cecil" Version="0.10.3" />
    <PackageReference Include="SharpCompress" Version="0.17.1" />
    <PackageReference Include="Splat" Version="6.1.7" />
    <PackageReference Include="squirrel.windows" Version="1.9.1" />
    <PackageReference Include="System.Drawing.Primitives" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="clock.ico" />
    <Content Include="clock.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>